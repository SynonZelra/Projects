#include "SPI.h"
#include "HID-Project.h"

byte datafetch;
bool keystate = 0;

void setup()
{
  //pin10 for latch of 74HC165N
  pinMode(10,OUTPUT);
  digitalWrite(10,HIGH);

  //SPI setting
  SPI.setClockDivider(SPI_CLOCK_DIV128);
  SPI.setDataMode(SPI_MODE0);
  SPI.setBitOrder(MSBFIRST);
  SPI.begin();

  NKROKeyboard.begin();
}

void loop()
{
  //latch the input
  digitalWrite(10,LOW);
  digitalWrite(10,HIGH);
  //transfer to get data
  datafetch = SPI.transfer(0x00);

  //keypress
  if ( keystate != bitRead(datafetch,0) )
  {
    if ( keystate == 0 )
    {
      NKROKeyboard.press('a');
      keystate = 1;
    }
    else
    {
      NKROKeyboard.release('a');
      keystate = 0;
    }
    delay(5);
  }
}
